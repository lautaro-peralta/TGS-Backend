{
  "name": "proyecto_tgs",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/server.js\"",
    "start:demo": "cross-env NODE_ENV=development EMAIL_VERIFICATION_REQUIRED=false tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/server.js\"",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "build": "tsc -p ./tsconfig.json",
    "start:prod": "cross-env NODE_ENV=production node ./dist/server.js",
    "clean": "pnpm exec rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run --reporter=default --coverage",
    "test:watch": "vitest",
    "test:unit": "cross-env NODE_ENV=test vitest run src/test/**.spec.ts -c",
    "test:integration": "cross-env NODE_ENV=test vitest run src/test/**.spec.ts -c",
    "test:e2e": "cross-env NODE_ENV=test vitest run src/test/**.spec.ts -c",
    "test:ci": "cross-env NODE_ENV=test vitest run --coverage --coverage.enabled --coverage.reporter=lcov --coverage.reporter=text-summary --coverage.threshold.lines=80 --coverage.threshold.functions=80 --coverage.threshold.branches=70",
    "test:perf": "tsx scripts/perf-smoke.ts",
    "security:sast": "pnpm audit --audit-level=high || true",
    "test:sendgrid": "cross-env NODE_ENV=development tsx scripts/test-sendgrid.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.1",
