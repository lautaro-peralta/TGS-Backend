    "@types/express": "5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.13",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "autocannon": "^8.0.0",
    "better-sqlite3": "^12.4.1",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsc-watch": "6.0.4",
    "tsx": "^4.20.5",
    "typescript": "5.1.3",
    "vitest": "^3.2.4"
  },
