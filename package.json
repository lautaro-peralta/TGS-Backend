{
  "name": "proyecto_tgs",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/server.js\"",
    "start:demo": "cross-env APP_MODE=demo NODE_ENV=development tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/server.js\"",
    "build": "tsc -p ./tsconfig.json",
    "start:prod": "cross-env NODE_ENV=production node ./dist/server.js",
    "clean": "pnpm exec rimraf dist",
    "type-check": "tsc --noEmit",
    "test:sendgrid": "cross-env NODE_ENV=development tsx scripts/test-sendgrid.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit",
    "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/integration --runInBand",
    "test:e2e": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/e2e --runInBand",
    "test:ci": "cross-env NODE_ENV=test jest --coverage --ci --maxWorkers=2",
    "test:performance": "pnpm run test:performance:load && pnpm run test:performance:stress",
    "test:performance:load": "artillery run tests/performance/artillery/scenarios/load-test.yml --output tests/performance/reports/load-test-results.json",
    "test:performance:stress": "artillery run tests/performance/artillery/scenarios/stress-test.yml --output tests/performance/reports/stress-test-results.json",
    "test:performance:spike": "artillery run tests/performance/artillery/scenarios/spike-test.yml --output tests/performance/reports/spike-test-results.json",
    "test:performance:soak": "artillery run tests/performance/artillery/scenarios/soak-test.yml --output tests/performance/reports/soak-test-results.json",
    "test:performance:report": "artillery report tests/performance/reports/load-test-results.json --output tests/performance/reports/load-test-report.html",
    "test:security": "pnpm run test:security:lint && pnpm run test:security:snyk && pnpm run test:security:audit",
    "test:security:lint": "eslint --config eslint.security.config.js src/",
    "test:security:snyk": "snyk test --severity-threshold=high",
    "test:security:audit": "pnpm audit --audit-level=moderate",
    "test:security:gitleaks": "docker run --rm -v \"$(pwd):/path\" ghcr.io/gitleaks/gitleaks:latest detect --source /path --config /path/.gitleaks.toml --verbose",
    "test:security:dast": "bash tests/security/dast/run-zap-scan.sh",
    "test:security:dast:full": "bash tests/security/dast/run-zap-full-scan.sh",
    "test:accessibility": "cross-env NODE_ENV=test jest tests/accessibility --runInBand",
    "test:regression": "cross-env NODE_ENV=test jest tests/regression --runInBand"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@mikro-orm/cli": "6.4.16",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/eslint": "^9.6.1",
    "@types/express": "5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.13",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "artillery": "^2.0.26",
    "codecov": "^3.8.3",
    "cross-env": "^10.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "snyk": "^1.1300.2",
    "supertest": "^7.1.4",
    "testcontainers": "^11.7.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "6.0.4",
    "tsx": "^4.20.5",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "@mikro-orm/core": "6.4.16",
    "@mikro-orm/knex": "6.4.16",
    "@mikro-orm/migrations": "6.4.16",
    "@mikro-orm/postgresql": "6.4.16",
    "@mikro-orm/reflection": "6.4.16",
    "@mikro-orm/sql-highlighter": "1.0.1",
    "@sendgrid/mail": "^8.1.6",
    "@types/express-rate-limit": "^6.0.2",
    "@types/nodemailer": "^7.0.2",
    "argon2": "^0.43.1",
    "colorette": "^2.0.20",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "pino": "^9.10.0",
    "pino-pretty": "^13.1.1",
    "redis": "^5.8.3",
    "reflect-metadata": "0.2.2",
    "string-width": "^8.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uploadthing": "^7.7.4",
    "uuid": "^11.1.0",
    "zod": "^4.0.5"
  }
}
