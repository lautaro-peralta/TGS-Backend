# ============================================================================
# TGS BACKEND - ENVIRONMENT CONFIGURATION EXAMPLE
# ============================================================================
# Copia este archivo a .env y completa con tus valores

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3000

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=tpdesarrollo

# ============================================================================
# AUTHENTICATION
# ============================================================================
# IMPORTANTE: Cambia esto en producción por un valor aleatorio y seguro
# Genera uno con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-this-to-a-secure-random-secret
JWT_EXPIRES_IN=15m

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
SECURITY_LOG_LEVEL=warn

# ============================================================================
# SECURITY & CORS
# ============================================================================
ALLOWED_ORIGINS=http://localhost:4200
TRUST_PROXY=false
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
CORS_MAX_AGE=86400

# ============================================================================
# REDIS (OPTIONAL - La app funciona sin Redis)
# ============================================================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# EMAIL SERVICE (SMTP/SendGrid)
# ============================================================================
# OPCIÓN 1: SMTP para desarrollo (Mailtrap)
# Regístrate en https://mailtrap.io para obtener credenciales gratis
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-password
SMTP_FROM=noreply@tgs-system.com

# OPCIÓN 2: SendGrid para producción (comenta SMTP si usas SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM=your-verified-sender@yourdomain.com

# ============================================================================
# EMAIL VERIFICATION
# ============================================================================
# false = Demo/Desarrollo (usuarios pueden login sin verificar)
# true = Producción (usuarios DEBEN verificar email)
EMAIL_VERIFICATION_REQUIRED=false

# ============================================================================
# FRONTEND
# ============================================================================
FRONTEND_URL=http://localhost:4200

# ============================================================================
# DOCKER (Solo si corres en Docker)
# ============================================================================
DOCKER_CONTAINER=false
